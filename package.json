{
  "name": "@postlight/ci-failed-test-reporter",
  "version": "1.0.26",
  "main": "index.js",
  "description": "📝 A tool for outputting JSON test reports as PR comments",
  "bin": {
    "ciftr": "./cli.js"
  },
  "repository": "https://github.com/postlight/ci-failed-test-reporter.git",
  "author": "Frankie Simms <fdsimms@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "lint": "eslint ./src --ext .ts,.js --fix",
    "test": "jest --json --outputFile test-output.json",
    "test:watch": "jest --watchAll",
    "test:mocha": "mocha --recursive './src/tests/mocha/*.js' --reporter json > test-output.json",
    "run-test-report": "ts-node run-test-report.js",
    "ts-node": "ts-node",
    "nodemon": "nodemon"
  },
  "dependencies": {
    "dotenv": "^6.2.0",
    "node-fetch": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.0",
    "@types/node": "^10.12.21",
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "@typescript-eslint/parser": "^1.3.0",
    "babel-jest": "^24.1.0",
    "eslint": "^5.14.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint ./src --ext .ts,.js --fix",
      "pretty-quick",
      "git add"
    ]
  }
}
