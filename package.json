{
  "name": "@postlight/ci-failed-test-reporter",
  "version": "1.0.26",
  "main": "index.js",
  "description": "ğŸ“ A tool for outputting JSON test reports as PR comments",
  "bin": {
    "ciftr": "./cli.js"
  },
  "repository": "https://github.com/postlight/ci-failed-test-reporter.git",
  "author": "Frankie Simms <fdsimms@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "lint": "eslint ./src --ext .ts,.js --fix",
    "test": "jest --json --outputFile test-output.json",
    "test:watch": "jest --watchAll",
    "test:mocha": "mocha --recursive './src/tests/mocha/*.js' --reporter json > test-output.json",
    "run-test-report": "ts-node run-test-report.js",
    "ts-node": "ts-node",
    "nodemon": "nodemon"
  },
  "dependencies": {
    "dotenv": "^8.1.0",
    "node-fetch": "^3.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-typescript": "^7.6.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "babel-jest": "^24.9.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint ./src --ext .ts,.js --fix",
      "pretty-quick",
      "git add"
    ]
  }
}
